@page
@model LoginModel

@{
    ViewBag.Title = "Log In";
}


<div class="container">

    <div class="row" style="margin-top:20px">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <form role="form" id="account" method="post">
                <fieldset>
                    <h4><b>Please Log In</b></h4>
                    <hr class="colorgraph">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Input.Email" type="email" name="email" id="email" class="form-control input-sm" placeholder="Email Address">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.Password" type="password" name="password" id="password" class="form-control input-sm" placeholder="Password">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <span class="button-checkbox">
                        <input type="checkbox" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                        <a class="pull-right" id="forgot-password" asp-page="./ForgotPassword">Forgot Password?</a>
                        <!--<a class="pull-right" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>-->
                    </span>

                    <hr class="colorgraph">
                    <div class="row ">
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <input type="submit" value="Log In" class="btn btn-sm btn-success btn-block">
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <a asp-page="/Account/Register" class="btn btn-sm btn-primary btn-block">Register</a>
                        </div>
                    </div>


                </fieldset>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
