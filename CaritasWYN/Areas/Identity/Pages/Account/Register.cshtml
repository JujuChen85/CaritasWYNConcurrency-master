@page
@model RegisterModel
@{
    ViewBag.Title = "Register";
}

<div class="container">

    <div class="row" style="margin-top:20px">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <fieldset>
                    <h4><b>Create a New Account</b></h4>
                    <hr class="colorgraph">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Input.FirstName" type="firstname" name="firstname" id="firstname" class="form-control input-sm" placeholder="First Name">
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.LastName" type="lastname" name="lastname" id="lastname" class="form-control input-sm" placeholder="Last Name">
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.Email" type="email" name="email" id="email" class="form-control input-sm" placeholder="Email Address">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.Password" type="password" name="password" id="password" class="form-control input-sm" placeholder="Password">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.ConfirmPassword" type="confirmpassword" name="confirmpassword" id="confirmpassword" class="form-control input-sm" placeholder="Confirm Password">
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <hr class="colorgraph">
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6 pull-right">
                            <input type="submit" value="Register" class="btn btn-sm btn-primary btn-block">
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
