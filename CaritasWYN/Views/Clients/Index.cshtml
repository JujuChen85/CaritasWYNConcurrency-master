@model IEnumerable<CaritasWYN.Models.Client>

@{
    ViewBag.Title = "Clients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4><b>List of Clients</b></h4>

<div class="row col-md-12 custyle" style="overflow-x:auto">
    <table class="table table-striped custab">
        <thead>
            <a asp-action="Create" class="btn btn-primary btn-sm pull-right"><b>+</b> Add New</a>
            <tr>
                <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                <th>@Html.DisplayNameFor(model => model.LastName)</th>
                <th>@Html.DisplayNameFor(model => model.Age)</th>
                <th>@Html.DisplayNameFor(model => model.Phone)</th>
                <th>@Html.DisplayNameFor(model => model.Room)</th>
                <th>@Html.DisplayNameFor(model => model.Floor)</th>
                <th>@Html.DisplayNameFor(model => model.Street)</th>
                <th>@Html.DisplayNameFor(model => model.Building)</th>
                <th>@Html.DisplayNameFor(model => model.District)</th>
                <th>@Html.DisplayNameFor(model => model.Referrer)</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Age)</td>
                <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                <td>@Html.DisplayFor(modelItem => item.Room)</td>
                <td>@Html.DisplayFor(modelItem => item.Floor)</td>
                <td>@Html.DisplayFor(modelItem => item.Street)</td>
                <td>@Html.DisplayFor(modelItem => item.Building)</td>
                <td>@Html.DisplayFor(modelItem => item.District)</td>
                <td>@Html.DisplayFor(modelItem => item.Referrer.Name)</td>
                <td class="text-center">
                    <a class="btn btn-info btn-xs" asp-action="Edit" asp-route-id="@item.ClientId"><span class="glyphicon glyphicon-edit"></span> Edit</a>
                    <a class="btn btn-danger btn-xs" asp-action="Delete" asp-route-id="@item.ClientId"><span class="glyphicon glyphicon-remove"></span> Del</a>
                </td>
            </tr>
        }
    </table>
</div>
