@model CaritasWYN.Models.Group

@{
    ViewBag.Title = "Edit";
}

<h4><b>Group details</b></h4>
<h5>Please enter or correct the following information</h5>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GroupId" />
            <div class="form-group">
                <label asp-for="StaffId" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <select asp-for="StaffId" class="form-control" asp-items="ViewBag.StaffId"></select>
                    <span asp-validation-for="StaffId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ClientId" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                    <span asp-validation-for="ClientId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <div class="pull-right">
                        <a asp-action="Index" class="btn btn-default btn-sm">Cancel</a>
                        <input type="submit" value="Save" class="btn btn-primary btn-sm" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
