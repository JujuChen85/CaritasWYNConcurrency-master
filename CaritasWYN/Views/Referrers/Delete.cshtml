@model CaritasWYN.Models.Referrer

@{
    ViewBag.Title = "Delete";
}

<h4><b>Delete Confirmation</b></h4>
<h5>Are you sure you want to delete this?</h5>
<hr />

<div class="row col-md-8 col-lg-offset-2">
    <table class="table table-bordered success">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <td>@Html.DisplayFor(model => model.Name)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Type)</th>
                <td>@Html.DisplayFor(model => model.Type)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Phone)</th>
                <td>@Html.DisplayFor(model => model.Phone)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Office)</th>
                <td>@Html.DisplayFor(model => model.Office)</td>
            </tr>
        </thead>
    </table>

    <form asp-action="Delete" class="pull-right">
        <input type="hidden" asp-for="ReferrerId" />
        <a asp-action="Index" class="btn btn-default btn-sm">Cancel</a>
        <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
    </form>

</div>
